@using Org.BouncyCastle.Crypto.Engines
@model IEnumerable<BookingHotelSearchViewModel.Results>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}

<h2>Booking Hotel Rezervasyon Sayfası</h2>

<h3>Arama Yapılan Şehir: Paris/Fransa</h3>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.name</td>
            @{ score = double.Parse(item.reviewScore.ToString()) / 10;}
            <td>@score</td>
            @{
                if (item.reviewScoreWord=="Verry good")
                {
                    <td>Çok iyi</td>
                }
                if (item.reviewScoreWord == "Good")
                {
                    <td>İyi</td>
                }
                if (item.reviewScoreWord == "Fabulous")
                {
                    <td>Harika</td>
                }
                if (item.reviewScoreWord == "Superb")
                {
                    <td>Mükemmel</td>
                }
                if (item.reviewScoreWord == "Exceptional")
                {
                    <td>Olağanüstü</td>
                }
            }
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>