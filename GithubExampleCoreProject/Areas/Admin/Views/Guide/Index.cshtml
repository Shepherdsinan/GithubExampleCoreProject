@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<a href="#" onclick="window.history.back()">GERİ DÖN</a>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin/</span> Rehber Listesi </h4>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Sil</th>
        
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>
                <img src="@item.Image" height="50" width="50" class="rounded-circle"/>
            </td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @{
                if (item.Status == true)
                {
                    <td>
                        <a href="/Admin/Guide/ChangeToGuideStat/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a>
                    </td>
                }
                else
                {
                    <td>
                        <a href="/Admin/Guide/ChangeToGuideStat/@item.GuideID" class="btn btn-outline-info">Aktif Yap</a>
                    </td>
                }
            }
            <td>
                <a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-outline-success">Düzenle</a>
            </td>
            <td>
                <a href="/Admin/Guide/DeleteGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi</a>