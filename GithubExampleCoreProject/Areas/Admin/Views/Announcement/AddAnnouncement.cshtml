@model AnnouncementAddDto

@{
    ViewBag.Title = "Duyuru Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin/</span> Duyuru Ekle</h4>
<form method="post">
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br/>
    <label>Duyuru İçeriği</label>
    <input type="text" asp-for="Content" class="form-control">
    <span asp-validation-for="Content" class="text-danger"></span>
    <br>
    <button class="btn btn-outline-primary">Duyuru Oluştur</button>
</form>